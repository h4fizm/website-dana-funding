    <script>
      function toggleAnonymous() {
        // Jika switch anonim diaktifkan, hilangkan nama dan email input
        const isAnonymous = document.getElementById("anonymous-switch").checked;
        document.getElementById("name-input").disabled = isAnonymous;
        document.getElementById("email-input").disabled = isAnonymous;
      }

      function handleSubmit(event) {
        event.preventDefault();

        // Validasi form
        const isAnonymous = document.getElementById("anonymous-switch").checked;
        const nameInput = document.getElementById("name-input");
        const emailInput = document.getElementById("email-input");
        const messageInput = document.getElementById("message");

        if (!isAnonymous) {
          if (!nameInput.value.trim()) {
            Swal.fire({
              icon: "error",
              title: "Oops...",
              text: "Nama harus diisi!",
            });
            return;
          }
          if (!emailInput.value.trim()) {
            Swal.fire({
              icon: "error",
              title: "Oops...",
              text: "Email harus diisi!",
            });
            return;
          }
        }

        if (!messageInput.value.trim()) {
          Swal.fire({
            icon: "error",
            title: "Oops...",
            text: "Pesan harus diisi!",
          });
          return;
        }

        const formData = new FormData(event.target);
        const data = {};
        formData.forEach((value, key) => {
          data[key] = value;
        });

        // Tambahkan flag anonymous ke data
        data.anonymous = isAnonymous;

        fetch("/api/feedbacks", {
          method: "POST",
          headers: {
            "Content-Type": "application/json",
          },
          body: JSON.stringify(data),
        })
          .then((response) => response.json())
          .then((result) => {
            if (result.message === "Feedback berhasil disimpan") {
              Swal.fire({
                icon: "success",
                title: "Terima kasih!",
                text: "Feedback Anda telah berhasil dikirim.",
              }).then(() => {
                event.target.reset();
              });
            } else {
              throw new Error(result.message || "Terjadi kesalahan");
            }
          })
          .catch((error) => {
            Swal.fire({
              icon: "error",
              title: "Oops!",
              text:
                error.message || "Terjadi kesalahan saat mengirim feedback.",
            });
          });
      }
    </script>
